        <canvas id="canvas"></canvas>
        <form class="sign-up" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <h1 class="sign-up-title">¡Hola!</h1>           
            <p style="text-align:center;color:#AAA">Ingresa tus credenciales</p>
            {% if error %}             
                <p style="text-align:center;color:#AAA">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            {% endif %}
            <input type="email" id="username" name="_username" value="{{ last_username }}" required="required" class="sign-up-input" placeholder="Correo electrónico" autofocus>
            <input type="password" class="sign-up-input" placeholder="Contraseña" id="password" name="_password" required="required" />
            <input type="submit" value="¡Entrar!" class="sign-up-button" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
